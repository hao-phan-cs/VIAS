<resources>

    <style name="MaterialTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen" />

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="NewsReaderTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/newsReaderColorPrimary</item>
        <item name="colorPrimaryDark">@color/newsReaderColorPrimaryDark</item>
        <item name="colorAccent">@color/newsReaderColorAccent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="HelpTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/helpColorPrimary</item>
        <item name="colorPrimaryDark">@color/helpColorPrimaryDark</item>
        <item name="colorAccent">@color/helpColorAccent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="OCRTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/OcrColorPrimary</item>
        <item name="colorPrimaryDark">@color/OcrColorPrimaryDark</item>
        <item name="colorAccent">@color/OcrColorAccent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorLightGrey</item>
        <!-- Used for the background -->
        <item name="android:background">#ffffff</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
